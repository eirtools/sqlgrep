root=true

[*]
end_of_line = lf
insert_final_newline = true
tab_width = 4
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
charset = utf-8

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
tab_width = 2
insert_final_newline = false

[*.{yml,yaml}]
tab_width = 2
indent_size = 2

[*.diff]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
trim_trailing_whitespace = false
